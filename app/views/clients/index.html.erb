<p id="notice" class="text-success"><%= notice %></p>

<h3>Clients</h3>

<table class= "table table-dark table-hover text-info">
  <thead>
    <tr>
      <th width="10%" height="10"; >Name</th>
      <th width="10%" height="10"; >Mail</th>
      <th width="10%" height="10"; >Birth date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td width="10%" height="10"; ><%= client.name %></td>
        <td width="10%" height="10"; ><%= client.mail %></td>
        <td width="10%" height="10"; ><%= client.birth_date %></td>
        <td width="2%" height="10"; ><%= link_to 'Show', client, class:"btn btn-info" %></td>
        <td width="2%" height="10"; ><%= link_to 'Edit', edit_client_path(client), class:"btn btn-info" %></td>
        <td width="2%" height="10"; ><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path, class:"btn btn-info" %>
